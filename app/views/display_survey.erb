<h1> <%= @survey.title %> </h1>

<form action="/submit_response/<%= @survey.id %>" method="POST">


  <% @survey.questions.each_with_index do |question, index| %>
    <% if question.q_type == "text" %>
      <%= question.q_title %><br>
      <label for="user_input"><input type="text" name="response"><br>

      <% elsif question.q_type == "multichoice" %>
        <%= question.q_title %><br>
        <%= p question.q_type %>
        <% question.choices.each do |choice| %>
        <input type="radio" name="response" value="<%= choice.id %>"><%= choice.c_title %>
        <% end %>
    <% end %>


  <% end %>
<br>

<input type="submit" value="Submit"></input>




  <br>
</form>



